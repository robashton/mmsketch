canvas
  background-color: #FFF
  width: 100%
  border: 1px solid #DDD
  -webkit-box-shadow: 2px 2px 10px 1px rgba(128, 128, 128, 0.5)
  box-shadow: 2px 2px 10px 1px rgba(128, 128, 128, 0.5)

#paintbrush-brushes 
  margin-top: 10px
  height: 60px
  float: left
  width: 37%

  span
    cursor: pointer
    float: left
    margin-left 30px
    margin-right: 15px
    margin-top: 5px
    width: 50px
    height: 50px

  span.selected
    box-shadow: 0 0 2px rgba(0, 0, 0, .8)
    -webkit-box-shadow: 0 0 2px2px rgba(0, 0, 0, .8)

#paintbrush-colours
  margin-top: 10px
  width: 63%
  float: right

  span 
    float: right
    width: 50px
    height: 50px
    -moz-border-radius: 25px
    -webkit-border-radius: 25px
    margin-left: 2px
    margin-right: 2px
    margin-top: 5px
    cursor: pointer
    border: 2px solid #000

  span.selected 
    box-shadow: 0 0 8px rgba(0, 0, 0, .8)
    -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8)

@media all and (min-width: 1300px) 
  canvas
    height: 50% 

@media all and (min-device-width: 768px) and (min-device-height: 1024px) and (orientation: landscape)
  canvas 
    height: 500px

@media all and (min-device-width: 768px) and (min-device-height: 1024px) and (orientation: portrait)

  canvas 
    height: 500px
    
