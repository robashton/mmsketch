canvas
  position: absolute
  width: 90%
  height: 100%;
  margin-left: 5%
  background-color: #FFF
  -webkit-box-shadow: 2px 2px 10px 1px rgba(128, 128, 128, 0.5)
  box-shadow: 2px 2px 10px 1px rgba(128, 128, 128, 0.5)

#paintbrush-brushes 
  margin-top: 10px
  margin-left: 5%
  height: 60px
  float: left
  width: 25%

  span
    cursor: pointer
    float: left
    margin-left 30px
    margin-right: 15px
    margin-top: 5px
    width: 50px
    height: 50px

  span.selected
    box-shadow: 0 0 2px rgba(0, 0, 0, .8)
    -webkit-box-shadow: 0 0 2px2px rgba(0, 0, 0, .8)

#paintbrush-colours
  margin-top: 10px
  width: 40%
  float: right
  margin-right: 5%

  span 
    float: right
    width: 50px
    height: 50px
    -moz-border-radius: 25px
    -webkit-border-radius: 25px
    margin-left: 2px
    margin-right: 2px
    margin-top: 5px
    cursor: pointer
    border: 2px solid #000

  span.selected 
    box-shadow: 0 0 8px rgba(0, 0, 0, .8)
    -webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8)
